<div class="container">
  <%= image_tag @content.cover.url(:medium) %>
  <p>
    <strong>Titolo:</strong>
    <%= @content.titolo %>
  </p>

  <p>
    <strong>Descrizione:</strong>
    <%= @content.descrizione %>
  </p>
  <% if user_signed_in? %>
  <%= link_to 'Edit', edit_content_path(@content) %> |
  <% end %>
  <%= link_to 'Back', root_path %>
</div>
