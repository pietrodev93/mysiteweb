<%= render "pages/sections/first" %>
<%= render "pages/sections/second" %>

<div id="portfolio" class="container">
  <h3 class="center">Portfolio</h3>
  <div class="row">
    <% @contents.each do |content| %>
      <div class="col s12 m4 l4">
        <div class="card">
            <div class="card-image waves-effect waves-block waves-light">
              <%= image_tag content.cover.url(:medium), class: "activator" %>
            </div>
            <div class="card-content">
              <span class="card-title activator grey-text text-darken-4 center"><%= content.titolo %><i class="material-icons right">aspect_ratio</i></span>
              <br>
                <p class="center">
                  <%= link_to 'Mostra', content, class: "btn" %>
                </p>

              <% if user_signed_in? %>
              <p>
                <%= link_to 'Edit', edit_content_path(content) %>
              </p>

              <p>
                <%=link_to 'Destroy', content, method: :delete, data: { confirm: 'Are you sure?' } %>
              </p>
              <% end %>
            </div>
            <div class="card-reveal">
              <span class="card-title grey-text text-darken-4"><%= content.titolo %><i class="material-icons right">close</i></span>
              <p><%= content.descrizione %></p>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
